.home .hero img {
    width: 600px;
    object-fit: cover;
}

blockquote {
    color: hsl(0, 0%, 30%);
}

main.page {
    word-break: break-all;
}

li.sidebar-sub-header a {
    color: hsl(0, 0%, 40%);
}

kbd {
    background-color: #eee;
    border-radius: 3px;
    border: 1px solid #b4b4b4;
    box-shadow: 0 1px 1px rgba(0, 0, 0, .2), 0 2px 0 0 rgba(255, 255, 255, .7) inset;
    color: #333;
    display: inline-block;
    font-size: .85em;
    font-weight: 700;
    line-height: 1;
    padding: 2px 4px;
    white-space: nowrap;
}

.content__default a[href^='/'],
.content__default a[href^='#'] {
    text-decoration: underline dotted hsla(220, 80%, 60%, 0.5);
}

.timeline-note + ul a + ul,
.timeline-note + ul a + ul ul {
    line-height: 1.3;
    font-size: 14px;
    color: grey;
}